<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.qmcb.mapper.polaris.SysRoleMapper">
    <select id="findSysRoleList" resultType="com.qmcb.entity.SysRole">
        SELECT id, rolename,memo FROM sysrole
	</select>

    <select id="getSysRoleById" resultType="com.qmcb.entity.SysRole">
		SELECT id, rolename,memo FROM sysrole
		where id = #{id}
	</select>


    <select id="getRoleMenuById" resultType="com.qmcb.entity.SysMenu">
        select c.*,a.menu_button from sysmenu c JOIN role_menu a on a.menu_id = c.id
         where roleid = #{id}
    </select>

    <insert id="addSysRole" useGeneratedKeys="true" keyProperty="id">
        insert into sysrole(
           rolename,
           memo
        )values(
          #{rolename},
          #{memo}
        )
    </insert>

    <update id="editSysRole">
        update sysrole
        <set>
            rolename = #{rolename},
            memo = #{memo},
        </set>
        where id = #{id}
    </update>

    <delete id="deleteSysRole">
      DELETE FROM sysrole
         WHERE id = #{id}
	</delete>


    <delete id="deleteRoleMenu">
        delete from role_menu
        WHERE roleid = #{id}
    </delete>


    <insert id="addRoleMenu" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO role_menu(roleId, menu_id,menu_button)
        VALUES (#{roleid}, #{menu_id},#{menu_button})
    </insert>

    <select id="getRoleMenuButtonById" resultType="com.qmcb.entity.SysMenu">
        select * from role_menu
        where
          roleid=#{roleid}
           and menu_id = #{menu_id}
    </select>

    <update id="editSysMenuButton">
        update role_menu
        <set>
            menu_button = #{menu_button}
        </set>
        where roleid = #{roleid}
        and menu_id = #{menu_id}
    </update>

    <select id="isExitRole" resultType="long">
        select COUNT(1) from sysrole where roleName = #{name}
    </select>

    <select id="isUsedRole" resultType="long">
        select COUNT(1) from user_role where roleId = #{id}
    </select>

</mapper>
